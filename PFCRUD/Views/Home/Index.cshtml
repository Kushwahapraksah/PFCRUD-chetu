    <div class="form-group">
        <label> Fee</label>
        @Html.TextAreaFor(m => m.Fee, new { @class = "form-control", @required = "required", @placeholder = "Enter your Fee " });
        @*<label> Student_name</label>
            @Html.TextAreaFor(m => m.Std_name)*@

