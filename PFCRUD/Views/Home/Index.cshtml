    <div class="form-group">
        <label> City</label>
        @Html.TextAreaFor(m => m.City, new { @class = "form-control", @required = "required", @placeholder = "Enter your City " });
        @*<label> Student_name</label>
            @Html.TextAreaFor(m => m.Std_name)*@

    </div>

    <div class="form-group">
        <label> Precentage</label>
        @Html.TextAreaFor(m => m.Percentage, new { @class = "form-control", @required = "required", @placeholder = "Enter your Percentage " });
        @*<label> Student_name</label>
            @Html.TextAreaFor(m => m.Std_name)*@

    </div>

    <button type="submit" class="btn btn-success">Submit</button>
